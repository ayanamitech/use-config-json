{
  "name": "use-config-json",
  "version": "1.0.1",
  "description": "Load configuation object from either config.json or system environment value",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:module && npm run build:types",
    "build:module": "rollup -c",
    "build:types": "tsc -p tsconfig.json --outDir dist/types --declaration --emitDeclarationOnly",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "npm run lint && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayanamitech/use-config-json.git"
  },
  "keywords": [
    "config.json",
    "dotenv",
    "env",
    "config"
  ],
  "files": [
    "dist/**/*.{ts,js}",
    "README.md",
    "LICENSE"
  ],
  "author": "AyanamiTech <ayanami0330@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ayanamitech/use-config-json/issues"
  },
  "homepage": "https://github.com/ayanamitech/use-config-json#readme",
  "dependencies": {
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
